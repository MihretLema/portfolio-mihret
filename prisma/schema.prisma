generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(150)
  email      String    @unique @db.VarChar(150)
  password   String    @db.VarChar(255)
  image      String?   @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  login      login[]
}

model article {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  slug         String    @unique @db.VarChar(255)
  content      String
  thumbnail    String?   @db.VarChar(255)
  tags         Json?
  published_at DateTime? @db.Timestamp(6)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
}

model login {
  id         Int       @id @default(autoincrement())
  admin_id   Int
  email      String    @unique @db.VarChar(150)
  password   String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.Timestamp(6)
  admin      admin     @relation(fields: [admin_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_admin_login")
}

model project_category {
  id          Int        @id @default(autoincrement())
  name        String     @unique @db.VarChar(120)
  description String?
  created_at  DateTime?  @default(now()) @db.Timestamp(6)
  projects    projects[]
}

model project_image {
  id           Int      @id @default(autoincrement())
  project_id   Int
  image_url    String   @db.VarChar(255)
  caption      String?  @db.VarChar(255)
  order_number Int?     @default(1)
  projects     projects @relation(fields: [project_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_project_image")
}

model projects {
  id               Int               @id @default(autoincrement())
  category_id      Int?
  title            String            @db.VarChar(255)
  description      String?
  thumbnail        String?           @db.VarChar(255)
  technologies     Json?
  project_url      String?           @db.VarChar(255)
  client_name      String?           @db.VarChar(150)
  status           String?           @default("completed") @db.VarChar(50)
  created_at       DateTime?         @default(now()) @db.Timestamp(6)
  project_image    project_image[]
  project_category project_category? @relation(fields: [category_id], references: [id], onUpdate: NoAction, map: "fk_project_category")
}

model resume {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(150)
  company     String?   @db.VarChar(150)
  start_date  DateTime? @db.Date
  end_date    DateTime? @db.Date
  is_current  Boolean?  @default(false)
  description String?
  type        String    @db.VarChar(50)
  created_at  DateTime? @default(now()) @db.Timestamp(6)
}

model service {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(150)
  description String
  icon        String?   @db.VarChar(255)
  created_at  DateTime? @default(now()) @db.Timestamp(6)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model skills {
  id         Int       @id @default(autoincrement())
  skill_name String    @db.VarChar(150)
  level      Int?
  category   String?   @db.VarChar(120)
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model testimonial {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(150)
  email       String    @db.VarChar(150)
  position    String?   @db.VarChar(150)
  message     String
  photo       String?   @db.VarChar(255)
  rating      Int?
  created_at  DateTime? @default(now()) @db.Timestamp(6)
  is_approved Boolean?  @default(false)
}
